{
  "name": "taskscheduller",
  "displayName": "TaskScheduller",
  "description": "Task management with Todo list, Kanban board, and Gantt chart views",
  "version": "0.0.1",
  "publisher": "mui-muimui",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Mui-MuiMui/TaskScheduller.git"
  },
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "task",
    "todo",
    "kanban",
    "gantt",
    "project management"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "l10n": "./l10n",
  "contributes": {
    "commands": [
      {
        "command": "taskScheduller.openMainView",
        "title": "%command.openMainView%",
        "category": "TaskScheduller",
        "icon": "$(checklist)"
      },
      {
        "command": "taskScheduller.createTask",
        "title": "%command.createTask%",
        "category": "TaskScheduller",
        "icon": "$(add)"
      },
      {
        "command": "taskScheduller.switchToTodo",
        "title": "%command.switchToTodo%",
        "category": "TaskScheduller"
      },
      {
        "command": "taskScheduller.switchToKanban",
        "title": "%command.switchToKanban%",
        "category": "TaskScheduller"
      },
      {
        "command": "taskScheduller.switchToGantt",
        "title": "%command.switchToGantt%",
        "category": "TaskScheduller"
      },
      {
        "command": "taskScheduller.openProject",
        "title": "%command.openProject%",
        "category": "TaskScheduller"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "taskScheduller",
          "title": "TaskScheduller",
          "icon": "resources/icons/task.svg"
        }
      ]
    },
    "views": {
      "taskScheduller": [
        {
          "type": "webview",
          "id": "taskScheduller.sidebarView",
          "name": "TaskScheduller",
          "icon": "resources/icons/task.svg"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "taskScheduller.openMainView",
          "when": "view == taskScheduller.sidebarView",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "TaskScheduller",
      "properties": {
        "taskScheduller.defaultView": {
          "type": "string",
          "default": "kanban",
          "enum": [
            "todo",
            "kanban",
            "gantt"
          ],
          "description": "%config.defaultView%"
        },
        "taskScheduller.autoSave": {
          "type": "boolean",
          "default": true,
          "description": "%config.autoSave%"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "npm run build:extension && npm run build:webview && npm run copy:wasm",
    "build:extension": "esbuild ./src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node --sourcemap",
    "build:webview": "cd webview && npm run build",
    "copy:wasm": "node -e \"require('fs').copyFileSync('node_modules/sql.js/dist/sql-wasm.wasm', 'dist/sql-wasm.wasm')\"",
    "watch": "concurrently \"npm run watch:extension\" \"npm run watch:webview\"",
    "watch:extension": "esbuild ./src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node --sourcemap --watch",
    "watch:webview": "cd webview && npm run dev",
    "test": "jest",
    "test:unit": "jest --testPathPattern=unit",
    "test:e2e": "vscode-test",
    "test:coverage": "jest --coverage",
    "lint": "eslint src webview/src --ext ts,tsx",
    "lint:fix": "eslint src webview/src --ext ts,tsx --fix",
    "package": "vsce package",
    "compile": "npm run build:extension"
  },
  "devDependencies": {
    "@types/node": "^22.10.0",
    "@types/uuid": "^10.0.0",
    "@types/vscode": "^1.100.0",
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.18.0",
    "@vscode/test-electron": "^2.4.1",
    "@vscode/vsce": "^3.2.0",
    "concurrently": "^9.1.0",
    "esbuild": "^0.24.0",
    "eslint": "^9.16.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.14",
    "ts-jest": "^29.2.5",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "sql.js": "^1.13.0",
    "uuid": "^11.0.3"
  }
}
