{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "command": "pnpm",
      "args": ["run", "watch"],
      "problemMatcher": "$tsc-watch",
      "isBackground": true,
      "presentation": {
        "reveal": "never"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "label": "pnpm: watch"
    },
    {
      "type": "shell",
      "command": "pnpm",
      "args": ["run", "build"],
      "problemMatcher": "$tsc",
      "group": "build",
      "label": "pnpm: build"
    },
    {
      "type": "shell",
      "command": "pnpm",
      "args": ["run", "lint"],
      "problemMatcher": ["$eslint-stylish"],
      "group": "test",
      "label": "pnpm: lint"
    }
  ]
}